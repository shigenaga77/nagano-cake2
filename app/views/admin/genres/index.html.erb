<h5 class="mx-auto col-xl-10 mt-5 mb-5">ジャンル一覧・追加</h5>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
                
    <div class="mx-auto col-xl-11 mb-5 ml-5">ジャンル名<span class="ml-5 mr-5"><%= f.text_field :name %></span> <%= f.submit '新規登録', class: 'btn btn-success' %></div>
<% end %>

<div class="mx-5 col-xl-3">
<table class="table table-hover">
    <thead>
        <tr>
            <th>ジャンル</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %></td>
            <td>
                <button type="button" class="btn btn-outline-dark">
                <%= link_to '編集する', edit_admin_genre_path(genre.id) %>
                </button>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>