<div class="container"> 
        <h5 class="mx-auto col-xl-12 mt-5 mb-4"><%= @customer.last_name+@customer.first_name %>さんの会員情報</h5>
    <div class="row">
        <div class="col-8">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>会員ID</td>
                            <td><%=@customer.id %></td>
                        </tr>
                        <tr>
                            <td>氏名</td>
                            <td><%= @customer.last_name+@customer.first_name %></td>
                        </tr>
                        <tr>
                            <td>フリガナ</td>
                            <td><%= @customer.last_name_kana+@customer.first_name_kana %></td>
                        </tr>
                        <tr>
                            <td>郵便番号</td>
                            <td><%= @customer.postal_code %></td>
                        </tr>
                        <tr>
                            <td>住所</td>
                            <td><%= @customer.address %></td>
                        </tr>
                        <tr>
                            <td>電話番号</td>
                            <td><%= @customer.telephone_number %></td>
                        </tr>
                        <tr>
                            <td>メールアドレス</td>
                            <td><%= @customer.email %></td>
                        </tr>
                        <tr>
                            <td>会員ステータス</td>
                            <td>
                                <% if @customer.is_deleted %>
                                    退会
                                <% else %>
                                    <%= "有効" %>
                                <% end %>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <button type="button" class="btn btn-outline-dark">
                                <%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
                                </button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-outline-dark">
                                    <%= link_to "注文履歴一覧を見る", admin_root_path(@customer.id) %>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
        </div>
    </div>
</div>