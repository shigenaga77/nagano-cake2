<h5><%= @customer.last_name+@customer.first_name %>さんの会員情報</h5>
<%= form_with model: @customer, url: admin_customer_path, method: :post do |f| %>
<table class="table table-borderless">
        <thead>
            <tr>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= f.label "会員ID" %></td>
                <td><%= @customer.id %></td>
            </tr>
            <tr>
                <td><%= f.label "氏名" %></td>
                <td><%= f.text_field :last_name %></td>
                <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
                <td><%= f.label "フリガナ" %></td>
                <td> <%= f.text_field :last_name_kana %></td>
                <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
                <td><%= f.label "郵便番号" %></td>
                <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
                <td><%= f.label "住所" %></td>
                <td><%= f.text_field :address %></td>
            </tr>
            <tr>
                <td><%= f.label "電話番号" %></td>
                <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
                <td><%= f.label "メールアドレス" %></td>
                <td><%= f.text_field :email %></td>
            </tr>
            <tr>
                <td><%= f.label :is_active,"会員ステータス" %></td>
                <td>
                    <%= f.radio_button :is_deleted, :false %>
                    <%= f.label :is_deleted, "有効" %>
                    
                    <%= f.radio_button :is_deleted, :true %>
                    <%= f.label :is_deleted, "退会"%>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="mx-auto col-xl-6">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
<% end %>
