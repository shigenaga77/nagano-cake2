<h2><%= @customer.name"さんの会員詳細" %></h2>
<%= form_with model: @customer, url: admin_customer_path do |f| %>
    <div class="form-group">
    <%= f.label "会員ID" %><br>
    <%= customer.id %>
    </div>
    
    <div class="form-group">
    <%= f.label "氏名" %><br>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
    </div>
    
    <div class="form-group">
    <%= f.label "フリガナ" %><br>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
    </div>
    
    <div class="form-group">
    <%= f.label "郵便番号" %><br>
    <%= f.text_field :postal_code %>
    </div>
    
    <div class="form-group">
    <%= f.label "住所" %><br>
    <%= f.text_field :address %>
    </div>
    
    <div class="form-group">
    <%= f.label "電話番号" %><br>
    <%= f.text_field :telephone_number %>
    </div>
    
    <div class="form-group">
    <%= f.label "メールアドレス" %><br>
    <%= f.text_field :encrypted_password %>
    </div>
    
    <div>
    ステータス
    </div>
    <div class="form-group">
    <%= f.submit 'Create Book', class: 'btn btn-success' %>
    </div>
<% end %>