<h5 class="mx-auto col-xl-9 mt-5 mb-5">商品詳細</h5>

<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
      </div>
    <div class="col-lg-8">
      <table class="table table-borderless">
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= @item.price %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>ステータス</td>
        </tr>
      </tbody>
    </table>
    </div>
    
    <div class="mx-auto col-xl-3">
    <button type="button" class="btn btn-outline-dark">
    <%= link_to "編集する", edit_admin_item_path(@item.id) %>
    </button>
    </div>
  </div>
</div>
