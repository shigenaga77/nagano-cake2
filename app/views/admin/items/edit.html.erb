<h5 class="mx-auto col-xl-8 mt-4 mb-5">商品編集</h5>
    <div class="mx-auto col-xl-5"><%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
    <table class="table table-md table-borderless">
        <thead>
            <tr>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= f.label :image,"商品画像" %></td>
                <td><%= f.file_field :image, accept: "image/*"%></td>
            </tr>
            <tr>
                <td><%= f.label :name,"商品名" %></td>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <td><%= f.label :introduction,"商品説明" %></td>
                <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
                <td><%= f.label :genre_id,"ジャンル" %></td>
                <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
            </tr>
            <tr>
                <td><%= f.label :price,"税抜価格" %></td>
                <td><%= f.text_field :price %></td>
            </tr>
            <tr>
                <td><%= f.label :is_active,"販売ステータス" %></td>
                <td>
                    <%= f.radio_button :is_active, :true %>
                    <%= f.label :is_active, "販売中" %>
                    
                    <%= f.radio_button :is_active, :false %>
                    <%= f.label :is_active, "販売停止中"%>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="mx-auto col-xl-6">
            <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
    <% end %>
    </div>
    