<h2 class="mt-3">商品編集</h2>
              <%= form_with model: @item do |f| %>
              
                <h4>画像</h4>
                    <%= f.file_field :image, accept: "image/*" %>
                    
                <div class="form-group">
                    <%= f.label :name %><br>
                    <%= f.text_field :name %>
                </div>
            
                <div class="form-group">
                    <%= f.label :introduction %><br>
                    <%= f.text_area :introduction %>
                </div>
                
                <div>
                    ジャンル
                </div>
                
                <div class="form-group">
                    <%= f.label :price %><br>
                    <%= f.text_field :price %>
                </div>
                
                <div>
                    ステータス
                </div>
            
                <div class="form-group">
                <%= f.submit 'Create Book', class: 'btn btn-success' %>
                </div>
              <% end %>