<div class="container">
    <div class="mx-auto col-xl-9 mt-5 mb-4 row">
        <div class="col-md-11">
        <h5>商品一覧</h5>
        </div>
        <div class="col-md-1">
        <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-plus"></i>
        <% end %>
        </div>
    </div>
</div>
    <div class="mx-auto col-xl-10">
        <table class="table table-hove">
            <thead>
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @items.each do |item| %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= link_to item.name, admin_item_path(item.id) %></td>
                    <td><%= item.price %></td>
                    <td><%= item.genre.name %></td>
                    <td></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>    
        <div class="mx-auto col-xl-1 ">
        <%= paginate @items %>
        </div>
            