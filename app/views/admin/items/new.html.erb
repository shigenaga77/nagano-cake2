<h2>商品新規登録</h2>
              <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
              
                <h4>画像</h4>
                    <%= f.file_field :image, accept: "image/*" %>
                    
                <div class="form-group">
                    <%= f.label :name %><br>
                    <%= f.text_field :name %>
                </div>
            
                <div class="form-group">
                    <%= f.label :introduction %><br>
                    <%= f.text_area :introduction %>
                </div>
                
                <div class="check_box">
                      <%= f.collection_check_boxes(:item_ids, Item.all, :id, :name) do |item| %>
                        <div class='form-check'>
                            <%= item.label do %>
                        　  <%= item.check_box %>
                        　  <%= item.text %>
                        　<% end %>
                        </div>
                      <% end %>
                </div>
                
                <div class="form-group">
                    <%= f.label :price %><br>
                    <%= f.text_field :price %>
                </div>
                
                <div>
                    ステータス
                </div>
            
                <div class="form-group">
                <%= f.submit 'Create Book', class: 'btn btn-success' %>
                </div>
              <% end %>
