<div class="container">

<div class="mt-5">管理者ログイン</div>

<div class="text-center"><%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3 mt-5">
        <span class="mr-5 ">メールアドレス</span><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="mb-3 col-xs-4">
          <span class="mr-5">パスワード</span><%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <button class="btn btn-primary" type="submit">ログイン</button>
<% end %>
</div>
  
<%= render "admin/shared/links" %>

</div>