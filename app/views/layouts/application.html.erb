<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>LOGO</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
      <% if admin_signed_in? %>
      <li>
        <%= link_to admin_items_path, class: 'nav-link text-light' do %>
          <i class="fas fa-home"></i> 商品一覧
        <% end %>  
      </li>
      <li>
        <%= link_to admin_items_path, class: 'nav-link text-light' do %>
          <i class="fas fa-users"></i> 会員一覧
        <% end %>  
      </li>
      <li>
        <%= link_to admin_items_path, class: 'nav-link text-light' do %>
          <i class="fas fa-book-open"></i> 注文履歴一覧
        <% end %>    
      </li>
      <li>
        <%= link_to admin_items_path, class: 'nav-link text-light' do %>
          <i class="fas fa-book-open"></i> ジャンル一覧
        <% end %>    
      </li>
      <li>
        <%= link_to destroy_admin_session_path,method: :delete, class: 'nav-link text-light' do %>
          <i class="fas fa-sign-out-alt"></i> ログアウト
        <% end %>
      </li>
      <% else %>
      <li>
        <%= link_to admin_items_path, class: 'nav-link text-light' do %>
          <i class="fas fa-link"></i> About
        <% end %>  
      </li>
      <li>
        <%= link_to admin_items_path, class: 'nav-link text-light' do %>
          <i class="fas fa-home"></i> 商品一覧
        <% end %>  
      </li>
      <li>
        <%= link_to admin_items_path, class: 'nav-link text-light' do %>
          <i class="fas fa-home"></i> 新規登録
        <% end %>  
      </li>
      <li>
        <%= link_to new_admin_session_path, class: 'nav-link text-light' do %>
          <i class="fas fa-home"></i> ログイン
        <% end %>  
      </li>
    <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>