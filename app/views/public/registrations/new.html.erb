<div class="container">
    <h5 class="row mx-auto col-xl-10 mt-5 mb-5">新規会員登録</h5>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
  <div class="row mx-auto col-xl-12">
      <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.label :名前 %></td>
          <td>（姓）</td>
          <td><%= f.text_field :last_name %></td>
          <td>（名）</td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td><%= f.label :フリガナ %></td>
          <td>（セイ）</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td>（メイ）</td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :郵便番号 %></td>
          <td></td>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :住所 %></td>
          <td></td>
          <td><%= f.text_field :address, size: "40" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :電話番号（ハイフンなし） %></td>
          <td></td>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <td>
            <%= f.label :パスワード（６文字以上） %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :パスワード（確認用） %></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
    <% end %>
  <h5 class="row mx-6 col-xl-10">既に登録済みの方</h5>
    <div>
    <%= link_to "こちら",customer_session_path %>からログインしてください。
    </div>
</div>