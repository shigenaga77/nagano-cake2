<h5>注文履歴一覧</h5>
<table>
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr>
    </thead>
    <tbody>
        <% @order each do |order| %>
        <tr>
            <td><%= order.updated_at %></td>
            <td>
                <%= "〒"+order.postal_code+order.address %><br>
                <%= order.name %>
            </td>
            <td><%= order.item.item.name %></td>
            <td><%= order.payment %></td>
            <td>ステータス</td>
            <td>
                <button type="button" class="btn btn-outline-success">
                    <%= link_to "表示する", order_path %>
                </button>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
