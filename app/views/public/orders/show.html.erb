<div class="container">
<h5 class="mt-4 mb-4">注文履歴詳細</h5>
    <div class="row">
        <div class="col-8">
        <strong>注文情報</strong>
        <table class="table table-bordered">
            <thead>
                <tr>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="table-active">注文日</td>
                    <td><%= @order.updated_at %></td>
                </tr>
                <tr>
                    <td class="table-active">配送先</td>
                    <td>
                        <%= "〒"+@order.postal_code+@order.address %><br>
                        <%= @order.name %>
                    </td>
                </tr>
                <tr>
                    <td class="table-active">支払方法</td>
                    <td><%= @order.method_of_payment_i18n %></td>
                </tr>
                <tr>
                    <td class="table-active">ステータス</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        </div>
        
        <div class="col-4">
        <strong>請求情報</strong>
        <table class="table table-bordered">
            <thead>
                <tr>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="table-active">商品合計</td>
                    <td><%= @order.payment-@order.postage %></td>
                </tr>
                <tr>
                    <td class="table-active">配送料</td>
                    <td><%= @order.postage %></td>
                </tr>
                <tr>
                    <td class="table-active">ご請求額</td>
                    <td><%= @order.payment %></td>
                </tr>
            </tbody>
        </table>
        </div>
    </div>


<strong>注文内容</strong>
<table class="table table-bordered">
    <thead>
        <tr class="table-active">
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td>
                    <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %>
                    <% end %>
                </td>
            </tr>
            <% end %>
    </tbody>
</table>
</div>