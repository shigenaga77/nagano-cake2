<div class="container">
<h5 class="md-auto mt-4 mb-4">注文情報確認</h5>
<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered">
            <thead>
                <tr class="table-active">
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                </tr>
            </thead>
            <tbody>
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td><%= image_tag cart_item.item.image, size: "150x100" %><%= cart_item.item.name %></td>
                    <td><%= cart_item.item.with_tax_price %></td>
                    <td><%= cart_item.amount %></td>
                    <td><%= cart_item.subtotal%></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <table class="table table-bordered">
            <thead>
                <tr>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="table-active">送料</td>
                    <% @order.postage = 800 %>
                    <td><%= @order.postage %></td>
                </tr>
                <tr>
                    <td class="table-active">商品合計</td>
                    <td><%= @total_price.round.to_s(:delimited)%></td>
                </tr>
                <tr>
                    <td class="table-active">請求金額</td>
                    <%= @order.payment = @total_price+@order.postage %>
                    <td><%= @order.payment %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<h5><strong>支払い方法</strong></h5>
<%= @order.method_of_payment_i18n %>

<h5><strong>お届け先</strong></h5>
<%= "〒"+@order.postal_code+@order.address %><br>
<%= @order.name %>

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
   <%= f.hidden_field :customer_id %>
   <%= f.hidden_field :postage %>
   <%= f.hidden_field :payment %>
   <%= f.hidden_field :method_of_payment %>
   <%= f.hidden_field :name %>
   <%= f.hidden_field :address %>
   <%= f.hidden_field :postal_code %>
   <!--<= f.hidden_field :status %>-->
<div class="text-center">
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
</div>
</div>