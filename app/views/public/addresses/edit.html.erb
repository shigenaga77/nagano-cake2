<h5 class="mx-auto col-xl-8 mt-4 mb-5">配送先編集</h5>
    <div class="mx-auto col-xl-10"><%= form_with model: @address do |f| %>
    <table class="table table-md table-borderless">
        <thead>
            <tr>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= f.label :postal_code,"郵便番号（ハイフンなし）" %></td>
                <td><%= f.text_field :postal_code%></td>
            </tr>
            <tr>
                <td><%= f.label :address,"住所" %></td>
                <td><%= f.text_field :address %></td>
            </tr>
            <tr>
                <td><%= f.label :name,"宛名" %></td>
                <td><%= f.text_field :name %></td>
                <td><%= f.submit '変更内容を保存', class: 'btn btn-success' %></td>
        </tbody>
    </table>
    <% end %>
    </div>