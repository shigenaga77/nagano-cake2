<h3>会員情報編集</h3>
<%= form_with model: @customer, url: customer_path do |f| %>
<div class="field">
    <%= f.label :氏名 %>
    <%= f.email_field :last_name %>
    <%= f.email_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.email_field :last_name_kana %>
    <%= f.email_field :first_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.email_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.email_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.email_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
  
  <div>
    <button type="button" class="btn btn-outline-danger">
    <%= link_to "退会する", confirm_path %>
    </button>
  </div>
 <% end %> 