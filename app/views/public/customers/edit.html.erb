<div class="container">
    <h5 class="row mx-auto col-xl-10 mt-5 mb-5">会員情報編集</h5>
  <div class="row">
    <table class="col-10">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
    <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
        <tr>
          <td><%= f.label :氏名 %></td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td><%= f.label :フリガナ %></td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td><%= f.label :郵便番号 %></td>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :住所 %></td>
          <td><%= f.text_field :address, size: "40" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :電話番号 %></td>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "編集内容保存", class: 'btn btn-success' %></td>
          <td>
            <button type="button" class="btn btn-outline-danger">
            <%= link_to "退会する", confirm_path %>
            </button>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  