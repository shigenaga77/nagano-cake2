<h2>マイページ</h2>
<h4>登録情報</h4>
<div><%= link_to "編集する", edit_customer_path(@customer.id) %></div>
<table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>氏名</th>
                    <th>カナ</th>
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>電話番号</th>
                    <th>メールアドレス</th>
                </tr>
            </thead>
            <tbody>
                <% @customers.each do |customer| %>
                <tr>
                    <td><%= customer.name %></td>
                    <td><%= customer.name_kana%></td>
                    <td><%= customer.postal_code %></td>
                    <td><%= customer.address %></td>
                    <td><%= customer.telephone_number %></td>
                    <td><%= customer.email %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
<h4>配送先</h4>
<h4>注文履歴</h4>